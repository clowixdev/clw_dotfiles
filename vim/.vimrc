syntax on

set number
set numberwidth=2
set encoding=utf-8
set fileencodings=utf-8

highlight LineNr ctermfg=NONE guifg=NONE
highlight CursorLineNr ctermfg=NONE guifg=NONE

set scrolloff=5
set shiftwidth=4
set softtabstop=4
set smarttab
set smartindent

set modelines=0 " cve
set nowrap

set hlsearch                   
set incsearch
